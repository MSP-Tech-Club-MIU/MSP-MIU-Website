{
  "name": "msp-miu-website",
  "version": "1.0.0",
  "description": "MIU MSP Club Registration Website",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:client",
    "build:client": "cd client && npm install --include=dev && npm run build",
    "start": "npm run start:server",
    "start:server": "cd server && npm start",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "clean": "rm -rf node_modules client/node_modules server/node_modules client/dist",
    "deploy": "npm run build && npm run start",
    "test": "cd client && npm test",
    "lint": "cd client && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/msp-miu-website.git"
  },
  "keywords": [
    "msp",
    "miu",
    "registration",
    "react",
    "express",
    "mysql"
  ],
  "author": "MSP MIU Team",
  "license": "MIT"
}
